            <largeIcon>/org/eumetsat/iavisa/ui/icons/IasiOverlay24.gif</largeIcon>
            <context>image</context>
            <helpId>IasiFootprintOverlay</helpId>
            <selected>false</selected>
        </action>
         -->
        <action>
            <id>addMetopOverlay</id>
            <class>org.eumetsat.iasi.visat.AddSounderOverlayAction</class>
            <parent>view</parent>
            <mnemonic>I</mnemonic>
            <text>Add METOP Footprint Overlay</text>
            <placeAfter>showPinOverlay</placeAfter>
            <shortDescr>Add METOP overlay</shortDescr>
            <description>Add METOP footprint overlay for the selected image</description>
            <smallIcon>/org/eumetsat/iavisa/ui/icons/IasiOverlay16.gif</smallIcon>
            <largeIcon>/org/eumetsat/iavisa/ui/icons/IasiOverlay24.gif</largeIcon>
            <context>image</context>
            <helpId>IasiFootprintOverlay</helpId>
        </action>
        
    </extension>
</module>